{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Django Backend",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/octofit-tracker/backend/manage.py",
      "args": ["runserver", "0.0.0.0:8000"],
      "django": true,
      "justMyCode": true,
        "python": "/workspaces/skills-build-applications-w-copilot-agent-mode/.venv/bin/python",
        "env": {
          "PYTHONPATH": "${workspaceFolder}/octofit-tracker/backend",
          "VIRTUAL_ENV": "/workspaces/skills-build-applications-w-copilot-agent-mode/.venv",
          "PATH": "/workspaces/skills-build-applications-w-copilot-agent-mode/.venv/bin:${env:PATH}"
      }
    },
    {
      "name": "Launch React Frontend",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/octofit-tracker/frontend/node_modules/react-scripts/scripts/start.js",
      "cwd": "${workspaceFolder}/octofit-tracker/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "port": 3000,
      "env": {
        "REACT_APP_CODESPACE_NAME": "${env:CODESPACE_NAME}"
      }
    }
  ]
}